# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

# Home page
GET        /            bananja.egc.controllers.ApplicationInfo.index
GET        /ping        bananja.egc.controllers.ApplicationInfo.ping
GET        /info        bananja.egc.controllers.ApplicationInfo.info

POST       /:lang/auth/signin            bananja.egc.controllers.UserApi.login(lang)
